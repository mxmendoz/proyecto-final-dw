<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOSTRAP 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="css/estilosApi.css">
    <title>Productos</title>

</head>
<body>    
    <div class="container2">
        <div class="shadow-lg pb-0 mb-6 bg-body rounded">
            <h3 class="texto">Productos Disponibles</h3>
            <form class="formulario" action="/crear2" method="POST">
                <div class="col-md-12">
                    <label for="codigo" class="form-label"><strong>Codigo</strong></label>
                    <input id="codigo" name="codigo" type="text" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="producto" class="form-label"><strong>Producto</strong></label>
                    <input id="producto" name="producto" type="text" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="marca" class="form-label"><strong>Marca</strong></label>
                    <input id="marca" name="marca" type="text" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="precio_compra" class="form-label"><strong>Precio Compra</strong></label>
                    <input id="precio_compra" name="precio_compra" type="number" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="precio_venta" class="form-label"><strong>Precio Venta</strong></label>
                    <input id="precio_venta" name="precio_venta" type="number" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="tamanio" class="form-label"><strong>Tamaño</strong></label>
                    <input id="tamanio" name="tamanio" type="text" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="tipo_venta" class="form-label"><strong>Tipo de Venta</strong></label>
                    <input id="tipo_venta" name="tipo_venta" type="text" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label for="existencia" class="form-label"><strong>Existencia</strong></label>
                    <input id="existencia" name="existencia" type="number" class="form-control" required>
                </div>
                <div class="col-md-12">
                  <label class="form-label">Guardar</label>
                  <button type="submit" class="w-100 h-60 btn btn-guardar btn-lg"><i class="bi bi-save-fill boton"></i></button>
              </div>
                
            </form>
 
            <table id="tablaProductos" class="table mt-10">
                <thead>
                    <tr>
                        <th style="display: none">Id</th>
                        <th><strong>Codigo</strong></th>
                        <th><strong>Producto</strong></th>
                        <th><strong>Marca</strong></th>
                        <th><strong>Precio Compra</strong></th>
                        <th><strong>Precio Venta</strong></th>
                        <th><strong>Tamaño</strong></th>
                        <th><strong>Tipo de Venta</strong></th>
                        <th><strong>Existencia</strong></th>
                        <th><strong>Operación</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach( (producto) =>{ %>
                        <tr>
                            <td style="display: none"><%= producto._id %></td>
                            <td><%= producto.codigo %></td>
                            <td><%= producto.producto %></td>
                            <td><%= producto.marca %></td>
                            <td><%= producto.precio_compra %></td>
                            <td><%= producto.precio_venta %></td>
                            <td><%= producto.tamanio %></td>
                            <td><%= producto.tipo_venta %></td>
                            <td><%= producto.existencia %></td>
                            <td> 
                                <a type="button" class="btnEditar btn btn-outline-primary bi bi-pen"></a>
                                <a href="/borrar2/<%= producto._id %>" class="btn btn-outline-danger bi bi-trash2"></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
          </div>

    <section class="tabla">
        <!-- Modal para Editar   -->
    <div id="modalProducto" class="modal fade" tabindex="-1" aria-labelledby="modalProducto" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="exampleModalLabel">Editar Información...</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/editar2" method="POST"> 
                  <input name="id_editar" id="id_editar" type="text" hidden>
                <div class="mb-9">
                  <label for="codigo_editar" class="col-form-label">Codigo:</label>
                  <input id="codigo_editar" name="codigo_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                  <label for="producto_editar" class="col-form-label">Producto:</label>
                  <input id="producto_editar" name="producto_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="marca_editar" class="col-form-label">Marca:</label>
                    <input id="marca_editar" name="marca_editar" type="text" class="form-control" value="">
                  </div>
                  <div class="mb-3">
                    <label for="precio_compra_editar" class="col-form-label">Precio Compra:</label>
                    <input id="precio_compra_editar" name="precio_compra_editar" type="number" class="form-control" value="">
                  </div>
                  <div class="mb-3">
                    <label for="precio_venta_editar" class="col-form-label">Precio Venta:</label>
                    <input id="precio_venta_editar" name="precio_venta_editar" type="number" class="form-control" value="">
                  </div>
                  <div class="mb-3">
                    <label for="tamanio_editar" class="col-form-label">Tamaño:</label>
                    <input id="tamanio_editar" name="tamanio_editar" type="text" class="form-control" value="">
                  </div>
                  <div class="mb-3">
                    <label for="tipo_venta_editar" class="col-form-label">Tipo de Venta:</label>
                    <input id="tipo_venta_editar" name="tipo_venta_editar" type="text" class="form-control" value="">
                  </div>
                  <div class="mb-3">
                    <label for="existencia_editar" class="col-form-label">Existencia:</label>
                    <input id="existencia_editar" name="existencia_editar" type="number" class="form-control" value="">
                  </div>
    
                <div class="modal-footer">              
                <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
              </form>
          </div>
        </div>
      </div>
   </div>
  </section>
</div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    
    <script src="js/productosApi.js"></script>
</body>
</html>